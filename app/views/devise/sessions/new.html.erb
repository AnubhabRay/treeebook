<div class="row">

	<div class="col-lg-4">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form-horizontal well"}) do |f| %>
		<fiedlset>

		<legend>Login in</legend>

			<%= f.input :email %>
			<%= f.input :password %>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.input :remember_me, as: :boolean %></div>
		  <% end %>

		  <div><%= f.button :submit, "Sign in" %></div>

	  </fiedlset>
	<% end %>

	<%= render "devise/shared/links" %>

	</div>

	<div class="col-lg-8">
		<h2>Signing in is easy and secure</h2>
	</div>


</div>